#!/bin/bash

# Bedrock Forge CLI Uninstall Script

set -e

# Colors
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
BLUE='\033[0;34m'
NC='\033[0m'

INSTALL_DIR="$HOME/.bedrock-forge"
BIN_DIR="$HOME/.local/bin"
FORGE_BIN="$BIN_DIR/forge"

print_info() {
    echo -e "${BLUE}ℹ️  $1${NC}"
}

print_success() {
    echo -e "${GREEN}✅ $1${NC}"
}

print_warning() {
    echo -e "${YELLOW}⚠️  $1${NC}"
}

print_error() {
    echo -e "${RED}❌ $1${NC}"
}

echo -e "${BLUE}🗑️  Bedrock Forge CLI Uninstaller${NC}"
echo

# Confirm uninstallation
read -p "Are you sure you want to uninstall Bedrock Forge CLI? (y/N): " -n 1 -r
echo
if [[ ! $REPLY =~ ^[Yy]$ ]]; then
    print_info "Uninstallation cancelled."
    exit 0
fi

# Remove installation directory
if [[ -d "$INSTALL_DIR" ]]; then
    print_info "Removing installation directory..."
    rm -rf "$INSTALL_DIR"
    print_success "Installation directory removed"
else
    print_warning "Installation directory not found"
fi

# Remove global command
if [[ -f "$FORGE_BIN" ]]; then
    print_info "Removing global command..."
    rm -f "$FORGE_BIN"
    print_success "Global command removed"
else
    print_warning "Global command not found"
fi

# Remove from PATH (optional)
read -p "Do you want to remove ~/.local/bin from your PATH? (y/N): " -n 1 -r
echo
if [[ $REPLY =~ ^[Yy]$ ]]; then
    print_info "Removing ~/.local/bin from shell configuration..."

    # Remove from .bashrc
    if [[ -f "$HOME/.bashrc" ]]; then
        sed -i '/\.local\/bin/d' "$HOME/.bashrc" 2>/dev/null || true
    fi

    # Remove from .zshrc
    if [[ -f "$HOME/.zshrc" ]]; then
        sed -i '/\.local\/bin/d' "$HOME/.zshrc" 2>/dev/null || true
    fi

    # Remove from .profile
    if [[ -f "$HOME/.profile" ]]; then
        sed -i '/\.local\/bin/d' "$HOME/.profile" 2>/dev/null || true
    fi

    print_success "PATH references removed"
fi

# Check for any remaining forge commands
if command -v forge >/dev/null 2>&1; then
    print_warning "forge command still found in PATH at: $(which forge)"
    print_info "You may need to restart your terminal or manually remove it."
else
    print_success "Bedrock Forge CLI has been completely removed"
fi

echo
print_success "Uninstallation completed! 🎉"
echo
print_info "Thank you for using Bedrock Forge CLI!"