  "plugin_settings": {
    "wordpress-seo": {
      "enabled": true,
      "auto_configure": true,
      "settings": {
        "site_type": "blog",
        "company_or_person": "person",
        "separator": "sc-dash",
        "homepage_title": "%%sitename%% %%page%% %%sep%% %%sitedesc%%",
        "admin_email": "admin@example.com"
      }
    },
    "w3-total-cache": {
      "enabled": true,
      "auto_configure": true,
      "settings": {
        "pgcache_enabled": true,
        "minify_enabled": true,
        "objectcache_enabled": true,
        "browsercache_enabled": true
      }
    },
    "wordfence": {
      "enabled": true,
      "auto_configure": true,
      "settings": {
        "firewall_enabled": true,
        "scan_enabled": true,
        "login_protection_enabled": true
      }
    },
    "contact-form-7": {
      "enabled": true,
      "auto_configure": false,
      "sample_forms": ["contact", "newsletter"]
    },
    "woocommerce": {
      "enabled": true,
      "auto_configure": true,
      "settings": {
        "enable_coupons": "yes",
        "enable_calc_shipping": "yes",
        "woocommerce_enable_myaccount_registration": "yes"
      }
    }
  },
  "dependencies": {
    "elementor-pro": ["elementor"],
    "woocommerce-gateway-stripe": ["woocommerce"],
    "pdf-invoices-packing-slips": ["woocommerce"]
  },
  "conflicts": {
    "wp-rocket": ["w3-total-cache", "wp-super-cache"],
    "rank-math": ["wordpress-seo", "all-in-one-seo-pack"],
    "elementor-pro": ["divi-builder", "avada-builder"]
  }
