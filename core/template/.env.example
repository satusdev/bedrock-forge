# Example Environment Variables

# Docker specific - Port mapping for this site's Nginx container
APP_PORT=8001

# Database Credentials
DB_NAME=example_db
DB_USER=example_user
DB_PASSWORD=example_password
DB_HOST=db
DB_CONTAINER=example_db

# Bedrock specific
WP_ENV=development
WP_HOME=http://localhost:8001
WP_SITEURL=http://localhost:8001/wp

SITE_TITLE='Example Site'
ADMIN_USER='admin'
ADMIN_PASSWORD='password'
ADMIN_EMAIL='admin@example.com'
WP_ALLOW_ROOT='true'

# Generate unique salts for each site using: https://roots.io/salts.html
AUTH_KEY='generateme'
SECURE_AUTH_KEY='generateme'
LOGGED_IN_KEY='generateme'
NONCE_KEY='generateme'
AUTH_SALT='generateme'
SECURE_AUTH_SALT='generateme'
LOGGED_IN_SALT='generateme'
NONCE_SALT='generateme'

# Host UID/GID for Docker user mapping (set dynamically by site-init)
HOST_UID=1000
HOST_GID=1000
